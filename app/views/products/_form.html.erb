<%= form_with model: @product do |f| %>
  <%= render 'shared/errors', resource: @product %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :specification %>
  <%= f.text_area :specification %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.submit 'Save'%>
<% end %>
