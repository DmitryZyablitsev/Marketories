<h1>Carts</h1>

<% @cart_items.each do |item| %>
  <div class="cart-item-<%= item.product.id %>">
    <h4><%= link_to item.product.title, product_path(item.product) %></h4>
    <p><%= item.quantity %></p>
    <p><%= item.product.price * item.quantity %></p>
    <p><%= button_to t('.delete'), product_path(item.id), method: :delete %></p>
  </div>
<% end %>
